{% comment %}
  CTA Section - Converted from React CTASection component
  Call-to-action with customizable button
{% endcomment %}

<section class="cta-section py-16 sm:py-20 md:py-28 lg:py-36 px-4 sm:px-6 md:px-12 lg:px-16 bg-background" dir="rtl">
  <div class="max-w-4xl mx-auto text-center">
    {% if section.settings.heading != blank %}
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-light leading-snug mb-6 md:mb-8">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    
    {% if section.settings.description != blank %}
      <p class="text-base sm:text-lg md:text-xl text-secondary-foreground font-light leading-relaxed mb-8 md:mb-10 max-w-2xl mx-auto">
        {{ section.settings.description }}
      </p>
    {% endif %}
    
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      {% if section.settings.primary_button_text != blank %}
        <a 
          href="{{ section.settings.primary_button_link }}" 
          class="inline-flex items-center justify-center px-8 py-4 bg-primary text-primary-foreground font-normal text-base transition-all duration-300 hover:opacity-90 w-full sm:w-auto"
        >
          {{ section.settings.primary_button_text }}
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </a>
      {% endif %}
      
      {% if section.settings.secondary_button_text != blank %}
        <a 
          href="{{ section.settings.secondary_button_link }}" 
          class="inline-flex items-center justify-center px-8 py-4 border border-primary text-primary font-normal text-base transition-all duration-300 hover:bg-primary hover:text-primary-foreground w-full sm:w-auto"
        >
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>
    
    {% if section.settings.note != blank %}
      <p class="text-sm sm:text-base text-muted-foreground mt-6">
        {{ section.settings.note }}
      </p>
    {% endif %}
  </div>
</section>

<style>
  .cta-section {
    animation: fadeIn 0.6s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

{% schema %}
{
  "name": "CTA Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "מוכנים להתחיל?"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "הצטרפו לשיטת SFD והתחילו לבנות בסיס כוח מקצועי שישרת את התנועה הרקדנית שלכם."
    },
    {
      "type": "header",
      "content": "Primary Button"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Button Text",
      "default": "התחילו עכשיו"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Secondary Button"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Button Text",
      "default": "קראו עוד"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Additional"
    },
    {
      "type": "text",
      "id": "note",
      "label": "Note Text"
    }
  ],
  "presets": [
    {
      "name": "CTA Section"
    }
  ]
}
{% endschema %}
