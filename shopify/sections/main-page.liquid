{% comment %}
  Main Page section - For generic page content
{% endcomment %}

<div class="main-page py-16 sm:py-20 md:py-28 px-4 sm:px-6 md:px-12 lg:px-16" dir="rtl">
  <div class="max-w-4xl mx-auto">
    {% if page.title != blank %}
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-light leading-snug mb-8 text-center">
        {{ page.title }}
      </h1>
    {% endif %}
    
    {% if page.content != blank %}
      <div class="page-content text-base sm:text-lg font-light leading-relaxed prose prose-lg max-w-none">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</div>

<style>
  .page-content {
    color: var(--color-text-secondary);
  }
  
  .page-content h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.875rem;
    font-weight: 300;
    color: var(--color-foreground);
  }
  
  .page-content h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
    font-weight: 300;
    color: var(--color-foreground);
  }
  
  .page-content p {
    margin-bottom: 1.5rem;
  }
  
  .page-content ul, .page-content ol {
    margin-bottom: 1.5rem;
    padding-right: 1.5rem;
  }
  
  .page-content li {
    margin-bottom: 0.5rem;
  }
  
  .page-content a {
    color: var(--color-primary);
    text-decoration: underline;
  }
  
  .page-content a:hover {
    opacity: 0.8;
  }
</style>

{% schema %}
{
  "name": "Main Page",
  "settings": []
}
{% endschema %}
