{% comment %}
  Hero Section - Converted from React HeroSection component
  Full-screen hero with background image and animated text
{% endcomment %}

<section class="hero-section min-h-screen relative flex items-center justify-center overflow-hidden" dir="rtl">
  {%- comment -%} Background Image {%- endcomment -%}
  <div class="absolute inset-0 z-0">
    {% if section.settings.hero_image != blank %}
      <img 
        src="{{ section.settings.hero_image | image_url: width: 2000 }}"
        srcset="{{ section.settings.hero_image | image_url: width: 600 }} 600w,
                {{ section.settings.hero_image | image_url: width: 1200 }} 1200w,
                {{ section.settings.hero_image | image_url: width: 2000 }} 2000w"
        sizes="100vw"
        alt="{{ section.settings.hero_image.alt | default: section.settings.heading }}" 
        class="w-full h-full object-cover object-center hero-image"
        loading="eager"
      />
    {% endif %}
    <div class="absolute inset-0 bg-gradient-to-t md:bg-gradient-to-l from-background via-background/90 md:via-background/80 to-background/20 md:to-transparent"></div>
  </div>
  
  {%- comment -%} Content {%- endcomment -%}
  <div class="section-container relative z-10 pt-20 md:pt-0 flex items-center justify-center">
    <div class="max-w-xl text-center">
      {% if section.settings.tagline != blank %}
        <p class="text-xs sm:text-sm uppercase tracking-widest mb-3 sm:mb-6 text-muted-foreground fade-in-up">
          {{ section.settings.tagline }}
        </p>
      {% endif %}
      
      {% if section.settings.heading != blank %}
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight tracking-tight mb-3 sm:mb-5 fade-in-up stagger-1">
          {{ section.settings.heading }}
        </h1>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p class="text-base sm:text-lg md:text-xl lg:text-2xl font-light leading-relaxed max-w-md mx-auto text-secondary-foreground fade-in-up stagger-2">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
  </div>

  {%- comment -%} Scroll Indicator {%- endcomment -%}
  {% if section.settings.show_scroll_indicator %}
    <div class="absolute bottom-6 md:bottom-10 left-1/2 transform -translate-x-1/2 z-10 scroll-indicator">
      <div class="w-14 h-14 md:w-16 md:h-16 rounded-full bg-primary flex items-center justify-center shadow-lg animate-bounce-slow">
        {% if section.settings.scroll_icon != blank %}
          {{ section.settings.scroll_icon | image_url: width: 40 | image_tag: class: 'w-8 h-8 md:w-10 md:h-10 invert', alt: 'גלול למטה' }}
        {% else %}
          <svg class="w-8 h-8 md:w-10 md:h-10 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        {% endif %}
      </div>
    </div>
  {% endif %}
</section>

<style>
  .hero-image {
    animation: scaleIn 1.5s ease-out;
  }

  @keyframes scaleIn {
    from {
      transform: scale(1.1);
    }
    to {
      transform: scale(1);
    }
  }

  .fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .stagger-1 { animation-delay: 0.1s; }
  .stagger-2 { animation-delay: 0.2s; }

  .animate-bounce-slow {
    animation: bounceSlow 2s ease-in-out infinite;
  }

  @keyframes bounceSlow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }

  .scroll-indicator {
    animation: fadeIn 0.5s ease-out 1s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "SFD - STRENGTH FOR DANCERS"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "רקדן הוא ספורטאי."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "הגוף של הרקדן דורש אימון מקצועי."
    },
    {
      "type": "header",
      "content": "Scroll Indicator"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show Scroll Indicator",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "scroll_icon",
      "label": "Custom Scroll Icon"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
