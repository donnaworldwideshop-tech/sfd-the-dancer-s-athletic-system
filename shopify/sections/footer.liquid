    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "text",
      "id": "navigation_title",
      "label": "Navigation Title",
      "default": "ניווט"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact Title",
      "default": "יצירת קשר"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "contact@sfd.co.il"
    },
    {
      "type": "url",
      "id": "instagram",
      "label": "Instagram URL"
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram Handle",
      "default": "@strengthfordancers"
    },
    {
      "type": "header",
      "content": "Bottom Bar"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "כל הזכויות שמורות."
    },
    {
      "type": "page",
      "id": "terms_page",
      "label": "Terms Page"
    },
    {
      "type": "text",
      "id": "terms_label",
      "label": "Terms Label",
      "default": "תנאי שימוש"
    },
    {
      "type": "page",
      "id": "privacy_page",
      "label": "Privacy Page"
    },
    {
      "type": "text",
      "id": "privacy_label",
      "label": "Privacy Label",
      "default": "מדיניות פרטיות"
    }
  ]
}
{% endschema %}
