{% comment %}
  Footer section - Converted from React Footer component
  Supports RTL layout and customizable content
{% endcomment %}

<footer class="site-footer bg-primary text-primary-foreground" dir="rtl">
  <div class="px-4 sm:px-6 md:px-12 lg:px-16 py-12 sm:py-16 md:py-20 max-w-6xl mx-auto">
    {%- comment -%} Main Footer Content {%- endcomment -%}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12 mb-12 md:mb-16">
      
      {%- comment -%} Logo & Description {%- endcomment -%}
      <div class="sm:col-span-2">
        {% if section.settings.footer_logo != blank %}
          {{ section.settings.footer_logo | image_url: width: 150 | image_tag: class: 'h-6 sm:h-7 md:h-8 w-auto mb-4 md:mb-6 invert', alt: shop.name }}
        {% else %}
          <h3 class="text-xl font-bold mb-4">{{ shop.name }}</h3>
        {% endif %}
        <p class="text-primary-foreground/70 text-sm sm:text-base leading-relaxed max-w-md">
          {{ section.settings.description | default: 'שיטת אימון כוח מקצועית ייעודית לרקדנים. בונים בסיס כוח שמשרת את התנועה הרקדנית.' }}
        </p>
      </div>

      {%- comment -%} Quick Links {%- endcomment -%}
      <div>
        <h4 class="text-xs sm:text-sm font-medium uppercase tracking-wider mb-4 md:mb-6 text-primary-foreground/50">
          {{ section.settings.navigation_title | default: 'ניווט' }}
        </h4>
        <nav class="space-y-2 sm:space-y-3">
          {% if section.settings.footer_menu != blank %}
            {% for link in section.settings.footer_menu.links %}
              <a href="{{ link.url }}" class="block text-sm sm:text-base text-primary-foreground/70 hover:text-primary-foreground transition-colors">
                {{ link.title }}
              </a>
            {% endfor %}
          {% else %}
            <a href="/" class="block text-sm sm:text-base text-primary-foreground/70 hover:text-primary-foreground transition-colors">
              עמוד הבית
            </a>
            <a href="/pages/about" class="block text-sm sm:text-base text-primary-foreground/70 hover:text-primary-foreground transition-colors">
              אודות השיטה
            </a>
            <a href="/pages/product" class="block text-sm sm:text-base text-primary-foreground/70 hover:text-primary-foreground transition-colors">
              ערכת האימון
            </a>
            <a href="/account" class="block text-sm sm:text-base text-primary-foreground/70 hover:text-primary-foreground transition-colors">
              אזור אישי
            </a>
          {% endif %}
        </nav>
      </div>

      {%- comment -%} Contact {%- endcomment -%}
      <div>
        <h4 class="text-xs sm:text-sm font-medium uppercase tracking-wider mb-4 md:mb-6 text-primary-foreground/50">
          {{ section.settings.contact_title | default: 'יצירת קשר' }}
        </h4>
        <div class="space-y-3 sm:space-y-4">
          {% if section.settings.email != blank %}
            <a href="mailto:{{ section.settings.email }}" class="flex items-center gap-3 text-sm sm:text-base text-primary-foreground/70 hover:text-primary-foreground transition-colors">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span>{{ section.settings.email }}</span>
            </a>
          {% endif %}
          
          {% if section.settings.instagram != blank %}
            <a href="{{ section.settings.instagram }}" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-sm sm:text-base text-primary-foreground/70 hover:text-primary-foreground transition-colors">
              <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
              <span>{{ section.settings.instagram_handle | default: '@strengthfordancers' }}</span>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    {%- comment -%} Bottom Bar {%- endcomment -%}
    <div class="pt-6 md:pt-8 border-t border-primary-foreground/10">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-3 sm:gap-4">
        <p class="text-xs sm:text-sm text-primary-foreground/50 text-center sm:text-right">
          © {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'כל הזכויות שמורות.' }}
        </p>
        <div class="flex items-center gap-4 sm:gap-6 text-xs sm:text-sm text-primary-foreground/50">
          {% if section.settings.terms_page != blank %}
            <a href="{{ section.settings.terms_page }}" class="hover:text-primary-foreground/70 transition-colors">
              {{ section.settings.terms_label | default: 'תנאי שימוש' }}
            </a>
          {% endif %}
          {% if section.settings.privacy_page != blank %}
            <a href="{{ section.settings.privacy_page }}" class="hover:text-primary-foreground/70 transition-colors">
              {{ section.settings.privacy_label | default: 'מדיניות פרטיות' }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Logo & Description"
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "description",
