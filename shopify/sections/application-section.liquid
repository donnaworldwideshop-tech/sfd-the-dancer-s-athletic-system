{% comment %}
  Application Section - Converted from React ApplicationSection component
  Displays how the method is applied with visual grid
{% endcomment %}

<section class="application-section py-16 sm:py-20 md:py-28 lg:py-36 px-4 sm:px-6 md:px-12 lg:px-16 bg-background" dir="rtl">
  <div class="max-w-6xl mx-auto">
    {% if section.settings.heading != blank %}
      <div class="text-center mb-12 md:mb-16">
        <p class="text-xs sm:text-sm uppercase tracking-widest mb-3 text-muted-foreground">
          {{ section.settings.tagline }}
        </p>
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-light leading-snug mb-6">
          {{ section.settings.heading }}
        </h2>
        {% if section.settings.description != blank %}
          <p class="text-base sm:text-lg text-secondary-foreground max-w-3xl mx-auto">
            {{ section.settings.description }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {% for block in section.blocks %}
        <div class="application-card p-6 md:p-8 bg-card rounded-sm border border-border hover:border-foreground/20 transition-all" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="mb-4">
              {{ block.settings.icon | image_url: width: 48 | image_tag: class: 'w-10 h-10 md:w-12 md:h-12' }}
            </div>
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h3 class="text-lg sm:text-xl font-normal mb-3">
              {{ block.settings.title }}
            </h3>
          {% endif %}
          
          {% if block.settings.description != blank %}
            <p class="text-sm sm:text-base font-light leading-relaxed text-secondary-foreground">
              {{ block.settings.description }}
            </p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .application-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .application-card:nth-child(1) { animation-delay: 0.1s; }
  .application-card:nth-child(2) { animation-delay: 0.2s; }
  .application-card:nth-child(3) { animation-delay: 0.3s; }
  .application-card:nth-child(4) { animation-delay: 0.4s; }
  .application-card:nth-child(5) { animation-delay: 0.5s; }
  .application-card:nth-child(6) { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

{% schema %}
{
  "name": "Application Section",
  "settings": [
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "יישום"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "איך השיטה עובדת"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "application_item",
      "name": "Application Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Application Section"
    }
  ]
}
{% endschema %}
