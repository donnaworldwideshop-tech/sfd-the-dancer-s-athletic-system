{% comment %}
  Product Details Section - For product/kit page
  Displays product information with images, price, and purchase options
{% endcomment %}

<section class="product-details py-16 sm:py-20 md:py-28 px-4 sm:px-6 md:px-12 lg:px-16 bg-background" dir="rtl">
  <div class="max-w-6xl mx-auto">
    
    {%- comment -%} Product Header {%- endcomment -%}
    <div class="grid md:grid-cols-2 gap-12 md:gap-16 mb-16">
      <div>
        {% if section.settings.product_image != blank %}
          <div class="product-image rounded-sm overflow-hidden">
            {{ section.settings.product_image | image_url: width: 800 | image_tag: class: 'w-full', alt: section.settings.product_name }}
          </div>
        {% endif %}
      </div>
      
      <div>
        {% if section.settings.category != blank %}
          <p class="text-xs sm:text-sm uppercase tracking-widest mb-4 text-muted-foreground">
            {{ section.settings.category }}
          </p>
        {% endif %}
        
        {% if section.settings.product_name != blank %}
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-light leading-snug mb-6">
            {{ section.settings.product_name }}
          </h1>
        {% endif %}
        
        {% if section.settings.product_description != blank %}
          <p class="text-base sm:text-lg text-secondary-foreground font-light leading-relaxed mb-8">
            {{ section.settings.product_description }}
          </p>
        {% endif %}
        
        {% if section.settings.price != blank %}
          <div class="mb-8 p-6 bg-card rounded-sm border border-border">
            <div class="text-3xl font-light mb-2">{{ section.settings.price }}</div>
            <p class="text-sm text-muted-foreground">{{ section.settings.price_note | default: 'כולל מע"מ ומשלוח' }}</p>
          </div>
        {% endif %}
        
        {% if section.settings.cta_button_text != blank %}
          <a 
            href="{{ section.settings.cta_button_link | default: '#' }}" 
            class="inline-flex items-center justify-center px-8 py-4 bg-primary text-primary-foreground font-normal text-base transition-all duration-300 hover:opacity-90 w-full md:w-auto mb-4"
            {% if section.settings.cta_button_link == blank %}onclick="alert('{{ section.settings.cta_alert_message | default: 'מערכת התשלום תחובר בקרוב' }}'); return false;"{% endif %}
          >
            {{ section.settings.cta_button_text }}
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </a>
        {% endif %}
        
        {% if section.settings.purchase_note != blank %}
          <p class="text-sm text-muted-foreground">
            {{ section.settings.purchase_note }}
          </p>
        {% endif %}
      </div>
    </div>

    {%- comment -%} Divider {%- endcomment -%}
    <div class="divider-line mb-16"></div>

    {%- comment -%} Product Features {%- endcomment -%}
    {% if section.settings.features_heading != blank %}
      <div class="mb-12">
        <h2 class="text-2xl sm:text-3xl font-light leading-snug mb-8">
          {{ section.settings.features_heading }}
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="p-6 bg-card rounded-sm border border-border" {{ block.shopify_attributes }}>
                {% if block.settings.title != blank %}
                  <h3 class="text-lg font-normal mb-3">{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.description != blank %}
                  <p class="text-sm sm:text-base text-secondary-foreground font-light leading-relaxed">
                    {{ block.settings.description }}
                  </p>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {%- comment -%} Divider {%- endcomment -%}
    <div class="divider-line mb-16"></div>

    {%- comment -%} How It Works {%- endcomment -%}
    {% if section.settings.how_it_works_heading != blank %}
      <div class="max-w-3xl mb-16">
        <h2 class="text-2xl sm:text-3xl font-light leading-snug mb-6">
          {{ section.settings.how_it_works_heading }}
        </h2>
        {% if section.settings.how_it_works_content != blank %}
          <div class="text-base sm:text-lg text-secondary-foreground font-light leading-relaxed space-y-6">
            {{ section.settings.how_it_works_content }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {%- comment -%} Divider {%- endcomment -%}
    <div class="divider-line mb-16"></div>

    {%- comment -%} Who Is It For {%- endcomment -%}
    {% if section.settings.target_audience_heading != blank %}
      <div class="max-w-3xl">
        <h2 class="text-2xl sm:text-3xl font-light leading-snug mb-6">
          {{ section.settings.target_audience_heading }}
        </h2>
        {% if section.settings.target_audience_content != blank %}
          <div class="text-base sm:text-lg text-secondary-foreground font-light leading-relaxed">
            {{ section.settings.target_audience_content }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Product Details",
  "settings": [
    {
      "type": "header",
      "content": "Product Information"
    },
    {
      "type": "text",
