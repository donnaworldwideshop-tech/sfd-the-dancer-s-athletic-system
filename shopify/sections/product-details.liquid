      "default": "ערכת האימון"
    },
    {
      "type": "text",
      "id": "product_name",
      "label": "Product Name",
      "default": "SFD Training Kit"
    },
    {
      "type": "textarea",
      "id": "product_description",
      "label": "Product Description",
      "default": "כלי עבודה מקצועי ליישום שיטת SFD - אימון כוח ייעודי לרקדנים."
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "header",
      "content": "Pricing"
    },
    {
      "type": "text",
      "id": "price",
      "label": "Price",
      "default": "₪450"
    },
    {
      "type": "text",
      "id": "price_note",
      "label": "Price Note",
      "default": "כולל מע\"מ ומשלוח"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "Button Text",
      "default": "לרכישת הערכה"
    },
    {
      "type": "url",
      "id": "cta_button_link",
      "label": "Button Link (leave empty for alert message)"
    },
    {
      "type": "text",
      "id": "cta_alert_message",
      "label": "Alert Message (if no link)",
      "default": "מערכת התשלום תחובר בקרוב"
    },
    {
      "type": "textarea",
      "id": "purchase_note",
      "label": "Purchase Note",
      "default": "לאחר הרכישה תקבלו גישה מיידית לתכנים הדיגיטליים. הציוד הפיזי יישלח תוך 3-5 ימי עסקים."
    },
    {
      "type": "header",
      "content": "Features Section"
    },
    {
      "type": "text",
      "id": "features_heading",
      "label": "Features Heading",
      "default": "מה כוללת הערכה"
    },
    {
      "type": "header",
      "content": "How It Works Section"
    },
    {
      "type": "text",
      "id": "how_it_works_heading",
      "label": "Heading",
      "default": "איך עובדים עם הערכה"
    },
    {
      "type": "html",
      "id": "how_it_works_content",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "Target Audience Section"
    },
    {
      "type": "text",
      "id": "target_audience_heading",
      "label": "Heading",
      "default": "למי הערכה מתאימה"
    },
    {
      "type": "html",
      "id": "target_audience_content",
      "label": "Content"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Details",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "ציוד פיזי",
            "description": "ציוד אימון ייעודי שנבחר במיוחד לעבודה לפי שיטת SFD."
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "גישה דיגיטלית",
            "description": "גישה מיידית לסרטוני הדגמה, תוכנית אימון מובנית, והנחיות מפורטות."
          }
        }
      ]
    }
  ]
}
{% endschema %}
